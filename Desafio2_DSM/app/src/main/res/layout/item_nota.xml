<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMateriaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MatemÃ¡ticas"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvNotaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nota: 8.5"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditarNota"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Editar nota" />

    <ImageButton
        android:id="@+id/btnEliminarNota"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="4dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Eliminar nota" />

</LinearLayout>